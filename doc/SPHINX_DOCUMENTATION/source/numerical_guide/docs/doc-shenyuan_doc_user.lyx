\begin_inset Formula 
\begin{equation}
\left\{ \begin{array}{cccc}
h_{K_{e}}^{G} & = &  & h_{K}\\
\hat{u}_{K_{e}}^{G} & = & - & \hat{u_{K}}\\
\hat{v}_{K_{e}}^{G} & = &  & \hat{v}_{K}
